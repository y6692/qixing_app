<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="281dp"
    android:layout_gravity="center"
    android:background="@drawable/block_dialog_bcg"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:paddingLeft="42dp"
        android:paddingRight="42dp"
        >

        <TextView
            android:id="@+id/ui_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现新版本"
            android:textColor="#3A3A3A"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/ui_update_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#333333"
            android:text="V1.8.0"
            android:textSize="14sp"
            />


        <TextView
            style="@style/DialogText"
            android:id="@+id/ui_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="22dp"
            android:lineSpacingExtra="5dp"
            android:singleLine="false"
            android:text="2222"
            android:textColor="#3A3A3A"
            android:textSize="14sp"
            />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/ll_scan_positiveButton2"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginBottom="27dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <Button
            android:id="@+id/ui_update_closeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="7dp"
            android:background="@drawable/btn_bcg_cancel"
            android:text="以后再说"
            android:textSize="@dimen/sp16"
            android:textColor="#FF5A62"
            android:layout_centerInParent="true"
            android:stateListAnimator="@null"
            />
        <Button
            android:id="@+id/ui_update_confirmBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btn_bcg_confirm"
            android:text="立即升级"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:stateListAnimator="@null"
            />

    </LinearLayout>



</LinearLayout>