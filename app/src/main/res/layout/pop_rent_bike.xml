        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="24dp"
                android:layout_marginLeft="55dp"
                android:src="@drawable/pop_head_bg"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:background="@color/white">
            </LinearLayout>


            <ImageView
                android:id="@+id/ib"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="65dp"
                android:src="@drawable/pop_ebike_good"
                />

        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_rent_cancelBtn"
                    android:layout_width="11.5dp"
                    android:layout_height="11.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/x"/>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_carmodel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:textSize="@dimen/sp20"
                        android:textColor="#EA5359"
                        android:text="单车"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="31dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#665E5E"
                        android:text="车辆编号："/>

                    <TextView
                        android:id="@+id/tv_codenum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp20"
                        android:textColor="#EA5359"
                        android:text="123"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
