                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp16"
                        android:textColor="#EA5359"
                        android:text=""/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#665E5E"
                        android:text="元/"/>

                    <TextView
                        android:id="@+id/tv_continued_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp16"
                        android:textColor="#EA5359"
                        android:text=""/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#665E5E"
                        android:text="分钟"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_each_free_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/btn_bcg_free"
                    android:text="1小时免费"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:gravity="center"/>

                <TextView
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/btn_bcg_times"
                    android:text="今日剩余5次免费"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:gravity="center"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_credit_score_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/btn_bcg_credit"
                    android:text="11=信用分=12"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:gravity="center"/>

                <LinearLayout
