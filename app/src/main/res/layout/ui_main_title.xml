<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/mainUI_title_mainLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40">

        <LinearLayout
            android:id="@+id/ll_backBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/mainUI_title_backBtn"
                android:layout_width="10.6dp"
                android:layout_height="19.7dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/back_image2"/>

            <TextView
                android:visibility="gone"
                android:layout_marginLeft="-10dp"
                android:id="@+id/tv_left"
                android:textSize="@dimen/sp16"
                android:text="返回"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/mainUI_title_backBtn"-->
            <!--android:layout_width="@dimen/dp35"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@drawable/back_image"-->
            <!--android:padding="@dimen/dp10"-->
            <!--android:layout_alignParentLeft="true"/>-->

        <TextView
            android:id="@+id/mainUI_title_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#EA5359"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/mainUI_title_rightBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/sp16"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="16sp"/>
    </RelativeLayout>
</LinearLayout>
