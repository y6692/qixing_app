<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    >


    <include
      layout="@layout/ui_main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的套餐卡"
            android:textSize="30sp"
            android:textColor="@color/tx_black"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/mainUI_titleLayout">

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/block_bcg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--android:background="@drawable/block_bcg2"-->
                <!--app:tabBackground="@drawable/background_tab2"-->

                <!--<com.flyco.tablayout.CommonTabLayout-->
                    <!--android:id="@+id/tab2"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:background="#ffffff"-->
                    <!--app:tl_indicator_color="#F95A64"-->
                    <!--app:tl_indicator_height="2dp"-->
                    <!--app:tl_indicator_width="92dp"-->
                    <!--app:tl_textSelectColor="#FD555B"-->
                    <!--app:tl_textUnselectColor="#666666"-->
                    <!--app:tl_textsize="18sp"-->
                    <!--app:tl_underline_color="#DDDDDD"-->
                    <!--app:tl_underline_height="0dp"/>-->

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:tabIndicatorFullWidth="false"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="#F95A64"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="#333333"
                    app:tabTextAppearance="@style/TabLayoutTextStyle2"
                    app:tabTextColor="#333333"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="3dp"
            android:layout_below="@id/ll_2"
            android:background="#F1F1F1"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



    </RelativeLayout>



</LinearLayout>